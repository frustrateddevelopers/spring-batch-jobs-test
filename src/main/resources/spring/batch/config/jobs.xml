<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	">

	<import resource="./context.xml" />

	<bean id="cvsFileItemReader" class="org.springframework.batch.item.file.FlatFileItemReader">
		<property name="resource" value="classpath:csv/input/report.csv" />
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="lineTokenizer">
					<bean
						class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names" value="id,sales,qty,staffName,date" />
						<property name="delimiter" value="|" />
					</bean>
				</property>
				<property name="fieldSetMapper">
					<bean
						class="com.example.springbatch.myfirstspringbatchexample.ReportFieldSetMapper" />
				</property>
			</bean>
		</property>
	</bean>
	<bean id="report"
		class="com.example.springbatch.myfirstspringbatchexample.model.Report"
		scope="prototype" />
	<bean id="itemProcessor"
		class="com.example.springbatch.myfirstspringbatchexample.CustomItemProcessor" />
	<bean id="csvFileItemWriterCallback"
		class="com.example.springbatch.myfirstspringbatchexample.StringHeaderWriter"
		scope="prototype">
	</bean>
	<bean id="propertyListener"
		class="com.example.springbatch.myfirstspringbatchexample.PropertyListener">
	</bean>

	<batch:job id="helloWorldJob">
		<batch:listeners>
			<batch:listener ref="propertyListener">
			</batch:listener>
		</batch:listeners>
		<batch:step id="step1">
			<batch:tasklet>
				<batch:chunk reader="cvsFileItemReader" writer="cvsFileItemWriter"
					processor="itemProcessor" commit-interval="1">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="customeLineAggregator"
		class="com.example.springbatch.myfirstspringbatchexample.CustomeLineAggregator">
		<property name="delimiter" value="," />
		<property name="fieldExtractor">
			<bean
				class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
				<property name="names" value="id_report,sales_report,qty_report,staffName_report,date_report" />
			</bean>
		</property>
	</bean>
	<bean id="cvsFileItemWriter"
		class="com.example.springbatch.myfirstspringbatchexample.CustomFlatFileItemWriter"
		init-method="init">

		<!-- write to this csv file -->
		<property name="headerCallback" ref="csvFileItemWriterCallback" />
		<property name="resource" value="file:csv/outputs/report.csv" />
		<property name="shouldDeleteIfExists" value="true" />
		<property name="header"
			value="id,sales,qty,staffName,date" />

		<property name="lineAggregator" ref="customeLineAggregator" />

	</bean>


</beans>
